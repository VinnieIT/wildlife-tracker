
{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid sighting-jumbotron">
        <div class="container">
            <h1 class="display-3">We Love.. We Conserve!</h1>
            <p class="lead">Tell us about your sightings ...</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    <h2 class="text-center"><u><b>{{locationofSighting}}</b></u></h2>
    <h4 class="text-center">The following were sighted</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal</th>
            <th scope="col">Time Seen</th>
            <th scope="col">Identified by</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{nameofanimal}}</td>
                <td>{{timestamp}}</td>
                <td><a href="/rangers/{{rangerid}}/details">{{rangerName}}</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}