{{#partial "navlinks"}}
    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            View Animals
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/animals/endangered">Endangered</a>
            <a class="dropdown-item" href="/animals/not-endangered">Not Endangered</a>
        </div>
    </li>
    <li class="nav-item"><a class="nav-link" href="/rangers">Our Rangers</a></li>
    <li class="nav-item"><a class="nav-link" href="/sightings">Sighting Locations</a></li>
    <li class="nav-item active"><a class="nav-link" href="/sighting/new">New Sighting</a></li>
{{/partial}}

{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid sighting-jumbotron">
        <div class="container">
            <h1 class="display-3">We Love.. We Conserve!</h1>
            <p class="lead">Tell us about your sightings ...</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    <h2 class="text-center"><u><b>{{locationofSighting}}</b></u></h2>
    <h4 class="text-center">The following were sighted</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal</th>
            <th scope="col">Time Seen</th>
            <th scope="col">Identified by</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{nameofanimal}}</td>
                <td>{{timestamp}}</td>
                <td><a href="/rangers/{{rangerid}}/details">{{rangerName}}</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}