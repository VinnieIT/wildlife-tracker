{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid main-page-jumbotron">
        <div class="container">
            <h1 class=" display-3 display-main">Welcome to Animal Preservation</h1>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    {{#if sightings}}
        <h4 class="text-center">All sightings established by all Rangers</h4>
        <table class="table text-center">
            <thead class="thead-light">
            <tr>
                <th scope="col">Animal Spotted</th>
                <th scope="col">Location</th>
                <th scope="col">Spotted On</th>
                <th scope="col">Ranger</th>
            </tr>
            </thead>
            <tbody>
            {{#each sightings}}
                <tr>
                    <td>{{nameofanimal}}</td>
                    <td>{{locationofSighting}}</td>
                    <td>{{timestamp}}</td>

                    <td><a href="/rangers/{{rangerid}}/details">{{sightings.rangerid}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">Sorry No Sightings have been reported yet</h5>
    {{/if}}
{{/partial}}

