

{{#partial "preContent"}}
    <div class="jumbotron jumbotrion-fluid ranger-jumbotron">
        <div class="container">
            <h1 class="display-3">Sacred Jungle!</h1>
            <p class="lead">The animal conservancy</p>
        </div>
    </div>
{{/partial}}

{{#partial "content"}}
    <div class="row">
        <div class="col-md-6">
            <h4>Ranger {{ranger.name}}</h4>
            <p>Below are the contributions of our very able ranger</p>
        </div>
        <div class="col-md-6 text-right">
            <a href="/rangers/{{ranger.id}}/sighting/new" class="btn btn-outline-success" id="ranger-details-new-sighting">Report a new sighting</a>
        </div>
    </div>

    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal Seen</th>
            <th scope="col">Location</th>
            <th scope="col">Time</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{animalofanimal}}</td>
                <td>{{locationofSighting}}</td>
                <td>{{timestamp}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}